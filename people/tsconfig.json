{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "ES2015",
    "moduleResolution": "node",
    "outDir": "build",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2020",
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/*.ts"
  ]
}
